<?xml version="1.0"?>
<addon scheme="2.0">
	<id>tsp_the_bug_genie_for_cscart</id>
	<name>The Software People: The Bug Genie for CS-Cart</name>
	<description>The Bug Genie for CS-Cart is an addon integration with The Bug Genie project management and issue tracking software.</description>
	<version>1.0</version>
	<priority>1111000101</priority>
	<position>0</position>
	<status>active</status>
	<default_language>EN</default_language>
	<auto_install>COMMUNITY,PROFESSIONAL,MULTIVENDOR,ULTIMATE</auto_install>
	<language_variables>
		<item lang="EN" id="tsp_the_bug_genie_for_cscart">The Software People: The Bug Genie for CS-Cart</item>
		<item lang="EN" id="tsptbg_issues_url">Issues URL</item>
		<item lang="EN" id="tsptbg_project_url">Project URL</item>
		<item lang="EN" id="tsptbg_report_url">Report Bug URL</item>
		<item lang="EN" id="tsptbg_wiki_url">Wiki URL</item>
		<item lang="EN" id="tsptbg_submit_project">Create Issue in Project</item>
		<item lang="EN" id="tsptbg_submit_issue_name">Issue Name</item>
		<item lang="EN" id="tsptbg_submit_issue_id">Issue ID#</item>
		<item lang="EN" id="tsptbg_submit_issue_text">Issue Description Template</item>
		<item lang="EN" id="tsptbg_submit_issue_type">Issue Type to Create</item>
		<item lang="EN" id="tsptbg_cannot_connect_to_database_server">Could not connect to The Bug Genie database server. Please check your settings.</item>
		<item lang="EN" id="tsptbg_wrong_table_prefix">Could not find tables with the prefix given in The Bug Genie database. Please check your settings.</item>
		<item lang="EN" id="tsptbg_db_connected">You have connected to The Bug Genie database successfully!</item>
	</language_variables>
	<settings>
		<sections>
			<section id="database">
				<!-- Tab name in the default language -->
				<name>Database Settings</name>		
				<items>
					<item id="info">
						<type>info</type>
						<name>Currently only mySQL databases are allowed.</name>
					</item>
					<item id="db_host">
						<name>Database Host</name>
						<type>input</type>
						<default_value>localhost</default_value>
					</item>
					<item id="db_name">
						<name>Database Name</name>
						<type>input</type>
					</item>
					<item id="db_user">
						<name>Database User Name</name>
						<type>input</type>
					</item>
					<item id="db_password">
						<name>Database User Password</name>
						<type>password</type>
					</item>
					<item id="table_prefix">
						<name>Table Prefix</name>
						<type>input</type>
						<default_value>tbg3_</default_value>
					</item>
				</items>
			</section>
			<section id="buggenie">
				<!-- Tab name in the default language -->
				<name>The Bug Genie Settings</name>		
				<items>
					<item id="delete_bug_genie_data">
						<name>Delete Bug Genie Data on Uninstall</name>
						<type>selectbox</type>
						<default_value>N</default_value>
						<variants>
							<item id="N">
								<name>No</name>
							</item>
							<item id="Y">
								<name>Yes</name>
							</item>
						</variants>
					</item>
					<item id="add_user">
						<name>Add Users to Database</name>
						<type>selectbox</type>
						<tooltip>User accounts will be automatically confirmed and enabled.</tooltip>
						<default_value>Y</default_value>
						<variants>
							<item id="N">
								<name>No</name>
							</item>
							<item id="Y">
								<name>Yes</name>
							</item>
						</variants>
					</item>
					<item id="user_group">
						<name>Default User Group</name>
						<type>input</type>
						<tooltip>Default user group to add users to upon transfer into The Bug Genie database. 2 = Regular User</tooltip>
						<default_value>2</default_value>
					</item>
					<item id="scope">
						<name>Default Scope</name>
						<type>input</type>
						<tooltip>Default scope, keep as 1 if only using The Bug Genie on one domain</tooltip>
						<default_value>1</default_value>
					</item>
					<item id="assignee_user">
						<name>Default Assignee User ID # </name>
						<type>input</type>
						<tooltip>Default user to assign the issue to</tooltip>
						<default_value>0</default_value>
					</item>
					<item id="assignee_team">
						<name>Default Assignee Team ID #</name>
						<type>input</type>
						<tooltip>Default team to assign the issue to</tooltip>
						<default_value>0</default_value>
					</item>
					<item id="status">
						<name>Default Status ID #</name>
						<type>input</type>
						<tooltip>Default status to assign the issue, 23 = New</tooltip>
						<default_value>23</default_value>
					</item>
				</items>
			</section>
		</sections>
	</settings>
	<queries>
		<!-- If parameter "for" equals "install" or is not set, the query is executed during the add-on installation -->
		<!-- If the "editions" attribute is given, the request will be executed only for the editions that are defined in it (separated with commas) -->
		<item for="install">
			CREATE TABLE `?:addon_tsp_the_bug_genie_for_cscart_product_metadata` (
				`product_id` mediumint(8) NOT NULL,
				`field_name` varchar(255) NOT NULL,
				`value` text NOT NULL,
				PRIMARY KEY (`product_id`,`field_name`)
			) ENGINE=MyISAM DEFAULT CHARSET=utf8;
		</item>
	</queries>
	<functions>
		<item for="uninstall">fn_tsptbg_uninstall_product_metadata</item>
		<item for="uninstall">fn_tsptbg_uninstall_languages</item>
	</functions>
</addon>